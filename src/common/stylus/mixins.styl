// 样式函数
// 上边框1px
border-top-1px($color)
  position relative
  &::after
    position absolute
    left 0
    top 0
    width 100%
    border-top 1px solid $color
    content ''

// 下边框1px
border-bottom-1px($color)
  position relative
  &::after
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    content ''

// 右边框1px
border-right-1px($color)
  position relative
  &::after
    position absolute
    right 0
    bottom 0
    height 100%
    border-right 1px solid $color
    content ''

// 左边框1px
border-left-1px($color)
  position relative
  &::after
    position absolute
    right 0
    bottom 0
    height 100%
    border-left 1px solid $color
    content ''

// 不显示边框
border-none()
  &:after
    display none
    
// 背景图
bg-image($url)
  background-image url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image url($url + '@3x.png')

// 单行省略
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
